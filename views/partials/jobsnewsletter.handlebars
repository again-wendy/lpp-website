<section id="jobsnewsletter">
    <div class="container">
        <h2 class="section-title">{{ tl.menu.jobsnewsletter }}</h2>
        <div class="title-border"></div>
        <div class="section-container">
            <div class="item jobs">
                <h4 class="item-title">{{ tl.jobs.jobs }}</h4>
                <div class="item-text">
                    <p>{{ tl.jobs.jobtext }}</p>
                    <button class="btn-primary-gradient">{{ tl.jobs.viewjobs }}</button>
                </div>
            </div>
            <div class="item newsletter">
                <h4 class="item-title">{{ tl.jobs.mailinglist }}</h4>
                <div class="item-text">
                    <p>{{ tl.jobs.mailingtext }}</p>
                    <button class="btn-primary-gradient">{{ tl.jobs.signup }}</button>
                </div>
            </div>
        </div>
    </div>
</section>