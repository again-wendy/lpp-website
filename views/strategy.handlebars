{{> navbar}}

<div id="strategy-page" class="service-page">
    <div class="choose-service">
        <ul class="services">
            <li class="active strategy">
                Strategy<span> as a Service</span>
            </li>
            <li class="notactive insights">
                <a href="/insights-as-a-service">Insights</a>
            </li>
            <li class="notactive solutioning">
                <a href="/solutioning-as-a-service">Solutioning</a>
            </li>
            <li class="notactive management">
                <a href="/management-as-a-service">Management</a>
            </li>
        </ul>
    </div>
    
    <div class="container page-text">
        <h2 class="page-title">{{ tl.strategypage.pagetitle }}</h2>
        <div class="paragraph">
            <p class="left-text">
                {{ tl.strategypage.lefttext }}
            </p>
            <p class="right-text">
                {{ tl.strategypage.righttext }}
            </p>
        </div>

        <div class="service-circles">
            <div class="circle">
                <a class="service-circle circle-1" onclick="openModal('#workshop-modal')">
                    <h4 class="circle-title">{{ tl.strategypage.workshop }}</h4><br />
                    <p>{{ tl.strategypage.moreinfo }} <span class="fa fa-caret-down"></span></p>
                </a>
            </div>
            <div class="circle">
                <a class="service-circle circle-2" onclick="openModal('#package-modal')">
                    <h4 class="circle-title">{{ tl.strategypage.package }}</h4><br />
                    <p>{{ tl.strategypage.moreinfo }} <span class="fa fa-caret-down"></span></p>
                </a>
            </div>
            <div class="circle">
                <a class="service-circle circle-3" onclick="openModal('#channel-modal')">
                    <h4 class="circle-title">{{ tl.strategypage.channel }}</h4><br />
                    <p>{{ tl.strategypage.moreinfo }} <span class="fa fa-caret-down"></span></p>
                </a>
            </div>
        </div>
    </div>
</div>

<div id="workshop-modal" class="modal">
    <div class="modal-content">
        <div class="modal-title">
            <h3 class="title">{{ tl.strategypage.modal.workshoptitle }}</h2>
            <a onclick="closeModal('#workshop-modal')" class="close">&times;</a>
        </div>
        <div class="modal-body">
            {{ tl.strategypage.modal.workshoptext }}
        </div>
    </div>
</div>

<div id="package-modal" class="modal">
    <div class="modal-content">
        <div class="modal-title">
            <h2 class="title">{{ tl.strategypage.modal.packagetitle }}</h2>
            <a onclick="closeModal('#workshop-modal')" class="close">&times;</a>
        </div>
        <div class="modal-body">
            {{ tl.strategypage.modal.packagetext }}
        </div>
    </div>
</div>

<div id="channel-modal" class="modal">
    <div class="modal-content">
        <div class="modal-title">
            <h2 class="title">{{ tl.strategypage.modal.channeltitle }}</h2>
            <a onclick="closeModal('#workshop-modal')" class="close">&times;</a>
        </div>
        <div class="modal-body">
            {{ tl.strategypage.modal.channeltext }}
        </div>
    </div>
</div>

