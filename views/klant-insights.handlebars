                    <div class="title-block">
                        <h3>{{ tl.insightspage.case.block4title }}</h3>
                    </div>
                    <div class="body-block">
                        <ul>
                            <li>{{ tl.insightspage.case.block4text1 }}</li>
                            <li>{{ tl.insightspage.case.block4text2 }}</li>
