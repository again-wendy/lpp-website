                        <ul>
                            <li>{{ tl.insightspage.case.block1text1 }}</li>
                            <li>{{ tl.insightspage.case.block1text2 }}</li>
                            <li>{{ tl.insightspage.case.block1text3 }}</li>
                            <li>{{ tl.insightspage.case.block1text4 }}</li>
                            <li>{{ tl.insightspage.case.block1text5 }}</li>
                        </ul>
                    </div>
                </div>
                <div class="column case case-2">
                    <div class="title-block">
                        <h3>{{ tl.insightspage.case.block2title }}</h3>
                    </div>
                    <div class="body-block">
                        <ul>
                            <li>{{ tl.insightspage.case.block2text1 }}</li>
                            <li>{{ tl.insightspage.case.block2text2 }}</li>
                            <li>{{ tl.insightspage.case.block2text3 }}</li>
                            <li>{{ tl.insightspage.case.block2text4 }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="column case case-3">
                    <div class="title-block">
                        <h3>{{ tl.insightspage.case.block3title }}</h3>
                    </div>
                    <div class="body-block">
                        <ul>
                            <li>{{ tl.insightspage.case.block3text1 }}</li>
                            <li>{{ tl.insightspage.case.block3text2 }}</li>
                            <li>{{ tl.insightspage.case.block3text3 }}</li>
