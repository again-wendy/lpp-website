<section id="customer-insights" class="customer-case">
    <div class="choose-service">
        <ul class="services">
            <li class="notactive strategy">
                <a href="/customer-case-strategy">Strategy</a>
            </li>
            <li class="active insights">
                Insights<span> as a Service</span>
            </li>
            <li class="notactive solutioning">
                <a href="/customer-case-solutioning">Solutioning</a>
            </li>
            <li class="notactive management">
                <a href="/customer-case-management">Management</a>
            </li>
        </ul>
    </div>

    <h2 class="section-title">{{ tl.insightspage.case.title }}</h2>
    <div class="title-border"></div>
    <div class="quote">
        <div class="inner">
            <span class="fas fa-quote-left"></span>
            <h2 class="text">{{ tl.insightspage.case.quote }}</h2>
            <div class="logo">
                <img src="./public/images/logos/tauw-logo.png" alt="Tauw logo">
            </div>
            <h3 class="name">- Sander van der Staaij</h3>
        </div>
    </div>
    <div class="container clearfix">
        <div class="text-center">
            <h4>{{ tl.insightspage.case.numbers }}</h4>
        </div>
        <div class="counters">
            <div class="counter counter-1">
                <h4 class="name">{{ tl.insightspage.case.turnover }}</h4>
